    <!-- PDF Modal -->
    <div id="pdf-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden no-print">
        <div class="max-w-5xl mx-auto mt-8 mb-8 h-[calc(100vh-4rem)] bg-white rounded-lg shadow-xl flex flex-col">
            <!-- Header -->
            <div class="bg-primary-700 text-white px-6 py-4 flex justify-between items-center rounded-t-lg">
                <h3 class="text-lg font-semibold" id="pdf-title">Document</h3>
                <button onclick="closePDF()" class="text-white hover:text-neutral-200 text-2xl" aria-label="Close">&times;</button>
            </div>

            <!-- PDF Viewer -->
            <div class="flex-1 p-4 overflow-hidden">
                <iframe id="pdf-frame" src="" class="w-full h-full border-0"></iframe>
            </div>

            <!-- Footer -->
            <div class="bg-neutral-50 px-6 py-4 flex justify-between items-center rounded-b-lg border-t border-neutral-200">
                <a id="pdf-download" href="" download class="px-4 py-2 bg-primary-700 text-white rounded hover:bg-primary-800 transition">
                    Download PDF
                </a>
                <button onclick="closePDF()" class="px-4 py-2 bg-white border border-neutral-300 text-neutral-700 rounded hover:bg-neutral-50 transition">
                    Close
                </button>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        // PDF functions (defined globally)
        window.openPDF = function(pdfPath, title) {
            try {
                document.getElementById('pdf-title').textContent = title || 'Document';
                document.getElementById('pdf-frame').src = pdfPath;
                document.getElementById('pdf-download').href = pdfPath;
                document.getElementById('pdf-modal').classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            } catch(e) {
                console.error('Error opening PDF:', e);
                alert('Error opening PDF viewer. Please try refreshing the page.');
            }
        };

        window.closePDF = function() {
            try {
                document.getElementById('pdf-modal').classList.add('hidden');
                document.getElementById('pdf-frame').src = '';
                document.body.style.overflow = 'auto';
            } catch(e) {
                console.error('Error closing PDF:', e);
            }
        };

        // Initialize event listeners when DOM is ready
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu toggle
            const mobileMenuBtn = document.getElementById('mobile-menu-btn');
            if (mobileMenuBtn) {
                mobileMenuBtn.addEventListener('click', function() {
                    const menu = document.getElementById('mobile-menu');
                    if (menu) {
                        menu.classList.toggle('mobile-menu-hidden');
                    }
                });
            }

            // Close PDF on escape
            document.addEventListener('keydown', function(e) {
                const modal = document.getElementById('pdf-modal');
                if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
                    closePDF();
                }
            });

            // Close PDF on outside click
            const pdfModal = document.getElementById('pdf-modal');
            if (pdfModal) {
                pdfModal.addEventListener('click', function(e) {
                    if (e.target === this) closePDF();
                });
            }

            // Attach PDF link handlers
            document.querySelectorAll('.pdf-link, [data-pdf]').forEach(function(link) {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pdfPath = this.getAttribute('data-pdf') || this.getAttribute('href');
                    const title = this.getAttribute('data-title') || 'Document';
                    if (pdfPath && pdfPath !== '#') {
                        window.openPDF(pdfPath, title);
                    }
                });
            });
        });

        // Auto-create engaging hero section
        document.addEventListener('DOMContentLoaded', function() {
            const contentArea = document.querySelector('.content-area');
            if (!contentArea) return;

            const firstTable = contentArea.querySelector('table, tbody');
            if (!firstTable) return;

            const firstImage = firstTable.querySelector('img');
            const links = firstTable.querySelectorAll('a');

            // Only require an image to create hero
            if (firstImage && links.length > 0) {
                const heroContainer = document.getElementById('hero-container');
                const pageHeader = document.getElementById('page-header');

                // Try to find heading in table, otherwise use page title
                const firstHeading = firstTable.querySelector('h2, h1');
                const headingText = firstHeading ? firstHeading.textContent :
                                   (pageHeader ? pageHeader.querySelector('h1').textContent : 'Welcome');

                const heroHTML = `
                    <div class="hero-section">
                        <div class="hero-content">
                            <div class="hero-text">
                                <h1>${headingText}</h1>
                                <p>Equipping believers worldwide through comprehensive biblical teaching, courses, and resources for spiritual growth.</p>
                                <div class="hero-actions">
                                    ${Array.from(links).slice(0, 2).map((link, i) => {
                                        const isPDF = link.classList.contains('pdf-link') || link.hasAttribute('data-pdf');
                                        const dataPdf = link.getAttribute('data-pdf') || '';
                                        const dataTitle = link.getAttribute('data-title') || '';
                                        const pdfAttrs = isPDF ? `class="hero-btn pdf-link${i > 0 ? ' hero-btn-secondary' : ''}" data-pdf="${dataPdf}" data-title="${dataTitle}"` :
                                                                `class="hero-btn${i > 0 ? ' hero-btn-secondary' : ''}"`;
                                        return `<a href="${link.href}" ${pdfAttrs}>${link.textContent.replace('üìÑ', '').replace(/\(pdf file\)/i, '').trim()}</a>`;
                                    }).join('')}
                                </div>
                            </div>
                            <div class="hero-image">
                                <img src="${firstImage.src}" alt="${firstImage.alt || 'Bible Teaching Program'}">
                            </div>
                        </div>
                    </div>
                `;

                heroContainer.innerHTML = heroHTML;

                // Re-attach PDF event listeners to hero buttons after creating them
                heroContainer.querySelectorAll('.pdf-link').forEach(function(link) {
                    link.addEventListener('click', function(e) {
                        e.preventDefault();
                        const pdfPath = this.getAttribute('data-pdf');
                        const title = this.getAttribute('data-title') || 'Document';
                        if (pdfPath && pdfPath !== '#') {
                            window.openPDF(pdfPath, title);
                        }
                    });
                });
                pageHeader.style.display = 'none';
                firstTable.remove();
            }
        });
    </script>

